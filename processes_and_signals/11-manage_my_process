#!/usr/bin/env bash
#sdljsljdlsjd
PID_FILE="/var/run/my_process.pid"
PROCESS_PATH="$(dirname "$0")/manage_my_process"

case "$1" in
  start)
    "$PROCESS_PATH" &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
    ;;
  stop)
    if [ -f "$PID_FILE" ]; then
      kill "$(cat "$PID_FILE")" 2>/dev/null
      rm -f "$PID_FILE"
      echo "manage_my_process stopped"
    fi
    ;;
  restart)
    if [ -f "$PID_FILE" ]; then
      kill "$(cat "$PID_FILE")" 2>/dev/null
      rm -f "$PID_FILE"
    fi
    "$PROCESS_PATH" &
    echo $! > "$PID_FILE"
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    exit 1
    ;;
esac

