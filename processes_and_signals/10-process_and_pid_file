#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid and handles signals gracefully

PID_FILE="/var/run/myscript.pid"

# Создаем PID-файл
echo $$ > "$PID_FILE"

# Обработка SIGINT (Ctrl+C)
trap 'echo "Y U no love me?! "' SIGINT

# Обработка SIGTERM — выводим сообщение, удаляем PID-файл и выходим
trap 'echo "I hate the kill command"; rm -f "$PID_FILE"; exit 0' SIGTERM

# Обработка SIGQUIT — удаляем PID-файл и выходим
trap 'rm -f "$PID_FILE"; exit 0' SIGQUIT

# Основной цикл
while true; do
    echo "To infinity and beyond"
    sleep 2
done
