#!/usr/bin/env bash
# This script saves its PID to a file and reacts to signals

PID_FILE="/var/run/myscript.pid"

# Create the PID file
echo "$$" > "$PID_FILE"

# Trap SIGINT (Ctrl+C)
trap 'echo "Y U no love me?!"' SIGINT

# Trap SIGTERM (kill command)
trap 'echo "I hate the kill command"; rm -f "$PID_FILE"; exit 0' SIGTERM

# Trap SIGQUIT (Ctrl+\)
trap 'rm -f "$PID_FILE"; exit 0' SIGQUIT

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done

