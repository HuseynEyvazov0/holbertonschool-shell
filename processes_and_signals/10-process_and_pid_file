#!/usr/bin/env bash
# This script writes its PID to /var/run/myscript.pid and handles signals gracefully

PID_FILE="/var/run/myscript.pid"

# Проверка прав на запись в /var/run
if [ ! -w "/var/run" ]; then
    echo "Cannot write to /var/run. Are you root?"
    exit 1
fi

# Записываем PID текущего процесса
echo "$$" > "$PID_FILE"

# Обработка сигналов
trap 'echo "Y U no love me?! "' SIGINT
trap 'echo "I hate the kill command"; rm -f "$PID_FILE"; exit 0' SIGTERM
trap 'rm -f "$PID_FILE"; exit 0' SIGQUIT

# Основной цикл
while true; do
    echo "To infinity and beyond"
    sleep 2
done
